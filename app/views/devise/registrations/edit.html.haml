
.devise-container
  .devise-container__main
    %h2.devise-container__main__header 編集
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = flash[:alert]
      = render "devise/shared/error_messages", resource: resource
      .devise-container__main__body
        .devise-container__main__body__field
          = f.label :nickname, class: "devise-container__main__body__field__label"
          %span.form-require 必須
          %br/
          = f.text_field :nickname, autofocus: true, class: "devise-container__main__body__field__input", placeholder: "例）ニックネーム"
        .devise-container__main__body__field
          = f.label :email, class: "devise-container__main__body__field__label"
          %span.form-require 必須
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email", class: "devise-container__main__body__field__input", placeholder: "PC・携帯どちらでも可"
        - if devise_mapping.confirmable? && resource.pending_reconfirmation?
          %div
            Currently waiting confirmation for: #{resource.unconfirmed_email}
        .devise-container__main__body__field
          = f.label :password, class: "devise-container__main__body__field__label"
          %span.form-require 必須
          -# - if @minimum_password_length
          -#   %em
          -#     (#{@minimum_password_length} characters minimum)
          %br/
          = f.password_field :password, autocomplete: "new-password", class: "devise-container__main__body__field__input", placeholder: "6文字以上の半角英数字"
        .devise-container__main__body__field
          = f.label :password_confirmation, class: "devise-container__main__body__field__label"
          %span.form-require 必須
          %br/
          = f.password_field :password_confirmation, autocomplete: "new-password", class: "devise-container__main__body__field__input"
        .devise-container__main__body__field
          = f.label :コメント, class: "devise-container__main__body__field__label"
          %br/
          = f.text_field :text, autofocus: true, class: "devise-container__main__body__field__input", placeholder: "出身は東京です。"
        .devise-container__main__body__field
          = f.label :image, class: 'image' do
            = icon('far', 'image', class: 'fa-image')
            = f.file_field :image, class: 'fa-image'
            トプ画を選択
            %span.form-require 必須
          .devise-container__main__body__field
            = f.label :current_password, class: "devise-container__main__body__field__label"
            = f.password_field :current_password, autocomplete: "current-password", class: "devise-container__main__body__field__input", placeholder: "変更には現在のパスワードが必要です。"
        .devise-container__main__body__field
          = f.submit "保存する", class: "devise-container__main__body__field__submit"
    -# = render "devise/shared/links"
