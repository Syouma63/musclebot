.devise-container
  .devise-container__main
    %h2.devise-container__main__header ログインフォーム
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .devise-container__main__body
        .devise-container__main__body__field
          = f.label :email, class: "devise-container__main__body__field__label"
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email", class: "devise-container__main__body__field__input", placeholder: "メールアドレスを入力してください"
        .field
          = f.label :password, class: "devise-container__main__body__field__label"
          %br/
          = f.password_field :password, autocomplete: "current-password", class: "devise-container__main__body__field__input", placeholder: "パスワードを入力してください"
        - if devise_mapping.rememberable?
          .field
            = f.check_box :remember_me
            = f.label :remember_me
        .devise-container__main__body__field
          = f.submit "Log in", class: "devise-container__main__body__field__submit"
